/* pages/apply_sale/apply_sale.wxss */

.pages {
    width: 100%;
    height: 100%;
    background: #f6f6f6;
}

.header {
    position: fixed;
    top: 0;
    left: 0;
    height: 88rpx;
    width: 100vw;
    display: flex;
    line-height: 88rpx;
    z-index: 99;
    background: #efefef;
    align-items: center;
}

.header-posi-img {
    width: 48rpx;
    height: 48rpx;
    padding: 0 32rpx;
}

.order_list {
    /* width:144px; */
    height: 88rpx;
    line-height: 88rpx;
    margin: 0 auto;
    font-size: 36rpx;
    font-family: PingFang-SC-Medium;
    color: rgba(74, 74, 74, 1);
}

/* 导航 */

.nav {
    height: 202rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px -2px 0px 0px rgba(239, 239, 239, 1);
    display: flex;
    align-items: center;
    border-bottom: 1px solid #f1f1f1;
}

.nav image {
    margin: 0 14rpx 0 32rpx;
}

.title {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(155, 155, 155, 1);
    line-height: 40rpx;
    margin-bottom: 60rpx;
}

.descript {
    display: flex;
}

.price {
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(155, 155, 155, 1);
    line-height: 40rpx;
    margin-right: 17rpx;
}

.num {
    color: #333;
    font-weight: 600;
}

.num1 {
    border-bottom: 4rpx solid #333;
}

/* 内容 */

.reason {
    margin: 24rpx auto;
    width: 714rpx;
    height: 144rpx;
    background: white;
    box-shadow: 0px -2px 0px 0px rgba(239, 239, 239, 1);
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.app_rea {
    padding-left: 32rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    color: rgba(74, 74, 74, 1);
}

.chose_reason {
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(155, 155, 155, 1);
    display: flex;
    justify-content: baseline;
}

.chose_reason image {
    width: 32rpx;
    height: 32rpx;
    padding: 6rpx 20rpx 0 20rpx;
    opacity: 0.7;
}

.return_reason {
    margin: 0 auto;
    width: 714rpx;
    height: 470rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px -2px 0px 0px rgba(239, 239, 239, 1);
}

.ret_rea {
    height: 112rpx;
    font-size: 36rpx;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    color: rgba(74, 74, 74, 1);
    line-height: 112rpx;
    margin-left: 26rpx;
}

.textarea {
    width: calc(100%-26rpx);
    height: 300rpx;
    background: rgba(246, 246, 246, 1);
    border-radius: 8rpx;
    margin: 0 26rpx 58rpx 26rpx;
    font-size: 28rpx;
    padding: 24rpx 24rpx 0 24rpx;
}

.footer {
    width: 100%;
    margin-top: 418rpx;
    height: 98rpx;
    background: rgba(255, 255, 255, 1);
    padding-left: 474rpx;
    margin-bottom: 54rpx;
}

.btn1 {
    text-align: center;
    width: 276rpx;
    height: 98rpx;
    background: linear-gradient(90deg, rgba(255, 3, 3, 1) 0%, rgba(246, 73, 21, 1) 100%);
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(255, 255, 255, 1);
}

/* 弹出层 */

.mask {
    width: 100%;
    height: 100vh;
    position: fixed;
    top: 0;
    z-index: 999;
}

.apply {
    height: 658rpx;
    width: 100%;
    position: absolute;
    bottom: 0;
    z-index: 1000;
    background: white;
}

.apply_title {
    display: flex;
    justify-content: space-between;
    height: 102rpx;
    align-items: center;
}

.close {
    width: 36rpx;
    height: 36rpx;
    padding: 0 32rpx;
}

label {
    width: 90%;
    height: 98rpx;
    background: rgba(255, 255, 255, 1);
    display: flex;
    justify-content: space-between;
    padding: 0 32rpx;
}

radio {
    border-radius: 50%;
    width: 32rpx; /* 最好是4的倍数，不然会不在中间 */
    height: 32rpx;
    border: 2rpx solid #c5e57d; /* 设置边框（外圆） */
    font-size: 0; /* 让边框重合 */
}

radio .wx-radio-input {
    border-radius: 50%;
    width: 32rpx;
    height: 32rpx;
    border: none; /* 替换边框（隐藏原有边框） */
}

radio .wx-radio-input.wx-radio-input-checked::before {
    border-radius: 50%;
    width: 20rpx;
    height: 20rpx;
    text-align: center;
    font-size: 0rpx; /* 对勾大小 去掉 */
    background-color: #c5e57d;
    transform: translate(-50%, -50%) scale(1);
    -webkit-transform: translate(-50%, -50%) scale(1);
}

.btn {
    width: 100%;
    height: 98rpx;
    line-height: 98rpx;
    text-align: center;
    background: linear-gradient(90deg, rgba(255, 3, 3, 1) 0%, rgba(246, 73, 21, 1) 100%);
    border-radius: 0;
    color: white;
}
