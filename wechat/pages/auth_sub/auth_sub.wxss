.header {
    position: fixed;
    top: 0;
    left: 0;
    height: 88rpx;
    width: 100vw;
    display: flex;
    line-height: 88rpx;
    z-index: 999;
    
    align-items: center;
}

.header-posi-img {
    width: 48rpx;
    height: 48rpx;
    padding: 0 32rpx;
}

.order_list {
    /* width:144px; */
    height: 88rpx;
    line-height: 88rpx;
    margin: auto;
    font-size: 36rpx;
    font-family: PingFang-SC-Medium;
    color: #fff;
}

.head-img{
    position: absolute;
    top:-128rpx;
    left:0;
    width:100vw;
    z-index:-1;

}
.main{
    padding:32rpx 48rpx;
}

.title{
    font-size: 32rpx;
    color: #D7AF85;
    line-height: 44rpx;
}
.main-title{
    display: flex;
    justify-content: center;
    align-items: center;
}

.avator{
    display: inline-block;
    width:112rpx;
    height:112rpx;
    border-radius:50%;
    box-shadow:0 0 0 2rpx #bbb;
    margin-right:24rpx;
}
.nick_name{
font-size:36rpx;
font-family:SFUIText-Semibold;
font-weight:600;
color:rgba(74,74,74,1);
line-height:42rpx;
margin-right:16rpx;
}
.level{
    width:56rpx;
    padding:0 8rpx;
    height:36rpx;
    border-radius:4px;
    border:2rpx solid rgba(215,175,133,1);
}
/* 内容 */
.part{
padding:24rpx 16rpx 32rpx 16rpx;
background:rgba(255,255,255,1);
box-shadow:0px 4rpx 8rpx 0px rgba(239,239,239,1),0px -2rpx 8rpx 0px rgba(239,239,239,1);
border-radius:8rpx;
margin-bottom: 32rpx;
}
.theme{
    min-width:584rpx;
    height:80rpx;
    display:flex;
    border:2rpx solid lightgray;
    font-size:28rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(149,160,182,1);
    align-items:center;
    padding-left:32rpx;
    border-radius:12rpx;
    margin-top:24rpx;

}
.acc_infor{
width:644rpx;
font-size:24rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
color:rgba(155,155,155,1);
line-height:34rpx;
/* margin:24rpx 0 20rpx 16rpx; */
}
.input{
background:rgba(255,255,255,1);
border-radius:12rpx;
border:none;
font-size:28rpx;
padding-left:20rpx;
}
.auth_sub{
    display:flex;
    justify-content:flex-end;
    align-items: center;
    box-shadow:0px 2rpx 0px 0px rgba(239,239,239,1);
}
.auth_sub image{
    width:36rpx;
    height:36rpx;
    margin-left:8rpx;
}
.auth_sub text{
    font-size:32rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(74,74,74,1);
    margin-right:150rpx;
}
.btn{
    width:276rpx;
    height:98rpx;
    line-height:98rpx;
    background:rgba(39,35,34,1);
    font-size:32rpx;
    font-family:PingFang-SC-Medium;
    font-weight:500;
    color:rgba(215,175,133,1);
    text-align: center;
}
/* 弹窗 */
.mask{
    width:100%;
    height:100%;
    background:rgba(0,0,0,0.25);
    position:fixed;
    left:0;
    top:0;
    z-index:10;
}
.box{
    width:714rpx;
    height:580rpx;
    background:rgba(255,255,255,1);
    border-radius:14rpx;
    margin: 500rpx auto;
    text-align: center;
}
.box image{
    width:678rpx;
    height:458rpx;
    margin:20rpx 0;
}
.album{
width:226rpx;
line-height:52rpx;
border-radius:26rpx;
border:2rpx solid rgba(235,103,106,1);
text-align: center;
font-size:28rpx;
font-family:PingFang-SC-Medium;
font-weight:500;
margin:0 auto;
color:rgba(235,103,106,1);
}