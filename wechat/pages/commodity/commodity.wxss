}
.storeList{
    display:flex;
    /* height:586rpx; */
    padding:26rpx 32rpx;
    padding-bottom:0;
    box-shadow:0 -2rpx 0 0 #ddd;
    background:#fff;
    flex-wrap: wrap;
    justify-content: space-between;
}
.storeList image{
    width:212rpx;
    height:266rpx;
    margin-bottom:28rpx;
