<!--pages/my/my.wxml-->

<tabbar selected='4'></tabbar>
<view>
    <view class="head">
        <view class="view_img">
            <image class='oimg' src="../../image/my_back.jpg"></image>
        </view>
        <view class="nav">
            <view class="logo">
                <!-- <image src="../../image/logo.jpg"></image> -->
                <!-- <open-data wx:if="{{userInfo!=''}}" type="userAvatarUrl" class="image"></open-data> -->
                <!-- wx:else -->
                <image  src="{{userInfo1.img_url}}"></image>
            </view>
            <view>
                <view class="meimei">所属团队:{{userInfo1.nick_name}}</view>
                <view class="tuan">
                    <image src="../../image/icon/level1.svg" wx:if='{{userInfo1.level==1}}'></image>
                    <image src="../../image/icon/level2.svg" wx:elif='{{userInfo1.level==2}}'></image>
                    <image src="../../image/icon/level3.svg" wx:elif='{{userInfo1.level==3}}'></image>
                    <image src="../../image/icon/level10.svg" wx:elif='{{userInfo1.level==10}}'></image>
                    <!-- <open-data wx:if="{{userInfo!=''}}" class="alex" type="userNickName"></open-data> -->
                    <!-- wx:else -->
                    <view  class="alex">{{userInfo1.nick_name}}</view>
                    <text class="tuanzhang">{{userInfo1.level_text}}</text>
                </view>
            </view>
            <view class="setting">
                <image class='settingimage' src="../../image/icon/setting.svg"></image>
            </view>
        </view>
    </view>
    <view class="content">
        <view class="order">
            <view wx:key="list" wx:for="{{orderList}}" class="{{index<4?'bd':''}} orderList" data-index="{{index}}" bindtap="currentIndex" wx:key="id">
                <image class="{{item.id==5?'active' : ''}} on" src="{{item.list}}"></image>
                <view class="name">{{item.name}}</view>
            </view>
        </view>
        <view class="my">
            <view class="myList" bindtap="indexclick" wx:for="{{ myList}}" wx:key="index" wx:for-index="index" data-index="{{index}}" wx:for-item="item">
                <image class="{{item.id==8?'my_img' : 'red'}}" src="{{item.my_img}}"></image>
                <view class="text">{{item.my_text}}</view>
            </view>
        </view>
    </view>
</view>