/* pages/scan.wxss */

.header {
    text-align: center;
    line-height: 88rpx;
    background: #f6f6f6;
    position: relative;
}

.back {
    height: 48rpx;
    width: 48rpx;
    position: absolute;
    left: 32rpx;
    bottom: 22rpx;
}

.content {
    height: 360rpx;
    background: rgba(255, 255, 255, 1);
}

.scan_pre {
    line-height: 64rpx;
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(155, 155, 155, 1);
}

.flex {
    display: flex;
    line-height: 84rpx;
    align-items: center;
}

.avatra {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    margin: 0 32rpx 10rpx 10rpx;
}

.progress {
    height: 28rpx;
    width: 612rpx;
    /* background:rgba(81,136,255,1);  */
}

.precent {
    font-size: 28rpx;
    font-family: SFUIText-Medium;
    font-weight: 500;
    color: rgba(81, 136, 255, 1);
    margin: 0 22rpx;
}

.proxy {
    justify-content: space-around;
}

.proxy .number {
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(155, 155, 155, 1);
}

.proxy .text {
    color: #333;
}

.proxy text {
    width: 84rpx;
    padding: 0 20rpx;
    height: 40rpx;
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    line-height: 40rpx;
    border-radius: 16rpx;
}

.proxy .green {
    color: rgba(8, 194, 153, 1);
    border: 2rpx solid rgba(8, 194, 153, 1);
}

.proxy .red {
    color: rgba(208, 2, 27, 1);
    border: 2rpx solid rgba(208, 2, 27, 1);
}

/* 我的团队 */

.myteam {
    min-height: 250rpx;
    background: rgba(255, 255, 255, 1);
}

.team {
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(74, 74, 74, 1);
    line-height: 78rpx;
    text-align: center;
}

.teamone {
    line-height: 64rpx !important;
}

.teamtwo {
    line-height: 32rpx !important;
    margin-bottom: 32rpx;
}

.avatraone {
    width: 48rpx;
    height: 48rpx;
    border-radius: 50%;
    margin: 0 16rpx 10rpx 0rpx;
}

.team_name {
    font-size: 24rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(155, 155, 155, 1);
}

/* 发货记录 */

.record {
    padding-bottom: 300rpx;
}

.recent_ship {
    text-align: center;
    height: 78rpx;
    font-size: 32rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(74, 74, 74, 1);
    line-height: 78rpx;
}

.shipid {
    display: flex;
    width: 640rpx;
    height: 134rpx;
    margin: 0 auto;
    font-size: 24rpx;
    background: rgba(255, 255, 255, 1);
    box-shadow: 0px 1px 4rpx 1px rgba(0, 0, 0, 0.13);
    margin-top: 12rpx;
    padding: 16rpx 20rpx 32rpx 26rpx;
    border-radius: 4rpx;
    justify-content: flex-start;
    /* align-items: center; */
}

.img {
    width: 86rpx;
    height: 86rpx;
}

.img image {
    display: inline-block;
    line-height: 86rpx;
    border-radius: 50%;
    height: 86rpx;
    width: 86rpx;
}

.ship_list {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    flex: 1;
    margin-left: 30rpx;
}

.ship_list .name {
    height: 50rpx;
    font-size: 28rpx;
    font-family: Helvetica;
    color: rgba(74, 74, 74, 1);
    line-height: 50rpx;
    display: flex;
    justify-content: space-between;
}

.ship_list .time {
    display: flex;
    justify-content: space-between;
    height: 50rpx;
    font-size: 24rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(155, 155, 155, 1);
    line-height: 50rpx;
}

.ship_num {
    font-size: 24rpx;
    font-family: SFUIDisplay-Medium;
    font-weight: 500;
    color: rgba(155, 155, 155, 1);
}

/* 扫码图片 */

.sacn_code {
    text-align: center;
    width: 100%;
    height: 120rpx;
    margin: 0 auto;
    position: fixed;
    bottom: 80rpx;
}

.sacn_code image {
    color: white;
    width: 120rpx;
    height: 120rpx;
    border-radius: 50%;
}

.sacn_code view {
    font-size: 28rpx;
    font-family: PingFang-SC-Medium;
    font-weight: normal;
    color: rgba(74, 74, 74, 1);
}
