.express-pop{
    position:fixed;
    top:50%;left:50%;
    transform:translate(-50%,-50%) ;
}
.express-pop .content{
    width:686rpx;
    height:826rpx;
    background-color: #fff;
    overflow: hidden;
    border-radius: 16rpx;
    padding-bottom: 40rpx;
}
.express_detail{
    width:602rpx;
    height:706rpx;
    padding:42rpx;
}

.color{
