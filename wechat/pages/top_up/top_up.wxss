.page {
    width: 100%;
}

.header {
    display: flex;
    align-items: center;
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    position: relative;
}

.placeholder {

    font-size: 32rpx;

    /* font-size: 40rpx;

    font-size: 60rpx; */

    color: #bbb;
    transition: 0.5s;
}

/* .much_money:focus-within .placeholder {
    opacity: 0;
} */

.posi-qr-bg {
    width: 100%;
    height: 640rpx;
    position: absolute;
    top: 0;
    z-index: -10;
}

.earth_img {
    text-align: center;
    margin-top: 54rpx;
}

.earth_img image {
    width: 182rpx;
    height: 182rpx;
    border-radius: 50%;
}

.name {
    margin: 32rpx auto;
    font-size: 36rpx;
    font-family: SFUIText-Medium;
    font-weight: 500;
    color: rgba(255, 255, 255, 1);
    line-height: 42rpx;
    text-align: center;
}

.father {
    position: relative;
    width: 504rpx;
    margin: 0 auto;
    text-align: center;
}

.brother {
    position: absolute;
    width: 504rpx;
    height: 128rpx;
    background: rgba(250, 250, 250, 1);
    filter: blur(7rpx);
    bottom: -16rpx;
    z-index: -2;
}

.much_money {
    position: relative;
    width: 504rpx;
    height: 228rpx;
    background: rgba(255, 255, 255, 1);
    border-radius: 8rpx;
    margin: 0 auto;
    margin-bottom: 18rpx;
    text-align: center;
    /* box-shadow:0px 6rpx 10rpx 0px rgba(235,236,237,1),0px 0px 10rpx 0px rgba(232,235,237,1); */
}
.much_money input{
    display:inline-block;
    color:#4a4a4a;
    vertical-align: middle;
}
.renminbi {
    position: absolute;
    line-height: 66rpx;
    top: 0;
    left: 75rpx;
    bottom: 0;
    height: 66rpx;
    margin: auto;
    /* color: #999;
    font-size: 36rpx; */

    color: #4a4a4a;
    font-size: 66rpx;
    vertical-align: middle;

}
.zero{
    position: absolute;
    line-height: 40rpx;
    top: 0;
    right: 36rpx;
    bottom: 0;
    height: 40rpx;
    margin: auto;
    /* color: #999; */
    font-size: 66rpx;
}

.payment {
    font-size: 24rpx;
    font-family: PingFang-SC-Medium;
    font-weight: 500;
    color: rgba(155, 155, 155, 1);
    line-height: 66rpx;
}

.much_money input {
    font-size: 66rpx;
    width: 250rpx;
    border: none;
    line-height: 100rpx;
    height: 100rpx;
    margin:0 auto;
    /* filter:blur(7px); */
}

.btn {
    width: 392rpx;
    height: 92rpx;
    background: linear-gradient(90deg, rgba(255, 127, 106, 1) 0%, rgba(255, 177, 87, 1) 100%);
    border-radius: 8rpx;
    line-height: 92rpx;
    border: none;
    text-align: center;
    color: rgba(255, 255, 255, 1);
    margin: 0 auto;
}
.btn:after{
    border:none
}
.part-2 {
    padding: 0 64rpx;
    padding-bottom: 74rpx;
    /* background:#FEF8F8; */
    box-shadow:0px -8rpx 42rpx 0px rgba(245,110,99,0.13) inset;
    
}

.record {
    font-size: 28rpx;
    font-family: PingFangSC-Semibold;
    font-weight: 600;
    color: rgba(245, 109, 98, 1);
    line-height: 40rpx;
}

.recent_income {
    display: flex;
    justify-content: space-between;
}

.recent {
    font-size: 26rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: rgba(150, 148, 149, 1);
    line-height: 64rpx;
}

.income {
    font-size: 32rpx;
    font-family: SFUIText-Medium;
    font-weight: 500;
    color: rgba(74, 74, 74, 1);
    line-height: 54rpx;
}

.avatar {
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
}

.list {
    height: 158rpx;
    background: rgba(255, 255, 255, 1);
    border-bottom:2rpx solid rgba(239,239,239,1) ;
    display: flex;
    align-items: center;
    padding-left: 42rpx;
}


.billList {
    padding: 0 32rpx;
    display: flex;
    justify-content: space-between;
    min-width: 558rpx;
}

.user {
    font-size: 32rpx;
    font-family: SFUIText-Medium;
    font-weight: 500;
    color: rgba(74, 74, 74, 1);
    line-height: 38rpx;
}

.account {
    font-size: 20rpx;
    font-family: SFUIText-Medium;
    font-weight: 500;
    color: rgba(155, 155, 155, 1);
    line-height: 32rpx;
}
